local Library = loadstring(game:HttpGetAsync("https://github.com/ActualMasterOogway/Fluent-Renewed/releases/latest/download/Fluent.luau"))()
local SaveManager = loadstring(game:HttpGetAsync("https://raw.githubusercontent.com/ActualMasterOogway/Fluent-Renewed/master/Addons/SaveManager.luau"))()
local InterfaceManager = loadstring(game:HttpGetAsync("https://raw.githubusercontent.com/ActualMasterOogway/Fluent-Renewed/master/Addons/InterfaceManager.luau"))()

local Window = Library:Window{
    Title = "+1 Speed A Second",
    SubTitle = "By coco",
    TabWidth = 130,
    Size =  UDim2.fromOffset(500, 430),
    Resize = false, 
    Theme = "Darker",
    MinimizeKey = Enum.KeyCode.LeftShift
}

-- Tabs
local Tabs = {
    mainTab = Window:CreateTab{Title = "Main Game", Icon = "phosphor-sword-bold"},
    Settings = Window:CreateTab{Title = "Settings", Icon = "phosphor-sword-bold"}
}

local Options = Library.Options

--------------------------------------------------
-- ABYSS EVENT TAB
--------------------------------------------------

local infiniteCashAmount = 100

local Input = Tabs.mainTab:CreateInput("InfiniteCashInput", {
    Title = "Infinite Cash Amount",
    Default = tostring(infiniteCashAmount),
    Placeholder = "Enter amount",
    Numeric = false,
    Finished = false,
    Callback = function(Value)
        local numberValue = tonumber(Value)
        if numberValue then
            infiniteCashAmount = numberValue
        end
    end
})

local infiniteDiamondsAmount = -100

local Input = Tabs.mainTab:CreateInput("InfiniteDiamondsInput", {
    Title = "Infinite Diamonds Amount",
    Default = tostring(infiniteDiamondsAmount),
    Placeholder = "Enter amount",
    Numeric = false, -- allow scientific notation if needed
    Finished = false,
    Callback = function(Value)
        local success, numberValue = pcall(function()
            return load("return " .. Value)()
        end)
        if success and type(numberValue) == "number" then
            infiniteDiamondsAmount = numberValue
        else
            warn("Invalid number entered")
        end
    end
})

Tabs.mainTab:CreateButton({
    Title = "Infinite Diamonds",
    Description = "Infinite diamonds (9,220,000,000,000,000,000 to get leaderboard number)",
    Callback = function()
        local args = {infiniteDiamondsAmount}
        game:GetService("ReplicatedStorage"):WaitForChild("BuyFans"):FireServer(unpack(args))
    end
})


Tabs.mainTab:CreateButton({
    Title = "Infinite Cash",
    Description = "Gives you cash. (9,220,000,000,000,000,000 to get leaderboard number, only works 18 times, dont press twice)",
    Callback = function()
        local args = {infiniteCashAmount}
        game:GetService("ReplicatedStorage"):WaitForChild("PigCash"):FireServer(unpack(args))
    end
})
   
Tabs.mainTab:CreateButton({
    Title = "Infinite Cash",
    Description = "Copies 9,220,000,000,000,000,000 to your clipboard.",
    Callback = function()
        task.spawn(function()
            setclipboard("9220000000000000000")
        end)
    end
})


--------------------------------------------------
-- CONFIGURATION / MANAGERS
--------------------------------------------------

SaveManager:SetLibrary(Library)
InterfaceManager:SetLibrary(Library)

SaveManager:IgnoreThemeSettings()
SaveManager:SetIgnoreIndexes({})

InterfaceManager:SetFolder("FluentEventsHub")
SaveManager:SetFolder("FluentEventsHub/SpecificGame")

InterfaceManager:BuildInterfaceSection(Tabs.Settings)
SaveManager:BuildConfigSection(Tabs.Settings)

Window:SelectTab(1)
Library:Notify{Title = "Fluent", Content = "Script loaded successfully!", Duration = 8}
SaveManager:LoadAutoloadConfig()
