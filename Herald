local player = game.Players.LocalPlayer
local char = player.Character or player.CharacterAdded:Wait()
local hrp = char:WaitForChild("HumanoidRootPart")

-- how far in front of the player
local offset = 2

-- function to move models
local function moveMonsters()
    for _, obj in ipairs(workspace:GetDescendants()) do
        if obj:IsA("Model") and obj.Name == "MonsterCollisions" and obj.PrimaryPart then
            -- position 5 studs in front of the player
            local newCFrame = hrp.CFrame * CFrame.new(0, 0, -offset)
            obj:SetPrimaryPartCFrame(newCFrame)
        end
    end
end

-- run once
moveMonsters()

-- if you want it to keep moving them as you move, uncomment this:
-- game:GetService("RunService").Heartbeat:Connect(moveMonsters)
